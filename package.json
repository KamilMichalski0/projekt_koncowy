{
  "name": "taskflow-app",
  "version": "1.0.0",
  "description": "Interactive To-Do web application with JSON persistence",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
